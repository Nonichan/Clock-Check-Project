<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/check_64px"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="check"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/view_Nombres_asistencia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nombres"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/view_Apellidos_asistencia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Apellidos"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/view_horallegada"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="horaLlegada"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/view_horaSalida"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="horaSalida"
                android:textSize="14sp"
                android:visibility="invisible"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>